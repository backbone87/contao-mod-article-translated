{
	"name": "backboneit/contao-mod-article-translated",
	"description": "Extension of the backboneit/contao-mod-article module and CEs to automatically take language references, provided by contao-community-alliance/language-relations, into account.",
	"keywords": [ "translation", "module", "content", "insert-tags", "article", "contao" ],
	"type": "contao-module",
	"license": "LGPL-3.0+",
	"authors": [
		{
			"name": "Oliver Hoff",
			"email": "oliver@hofff.com",
			"homepage": "http://hofff.com/",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^5.6 || ^7.0",
		"contao/core": "^3.5",
		"contao-community-alliance/composer-plugin": "^2.0",
		"backboneit/contao-mod-article": "^3.0",
		"hofff/contao-language-relations": "^2.0"
	},
	"autoload": {
		"psr-0": {
			"bbit": "src/"
		}
	},
	"extra": {
		"contao": {
			"sources": {
				"contao-module": "system/modules/backboneit_mod_article_translated"
			},
			"runonce": [
				"runonce/01_update.php"
			]
		}
	}
}
